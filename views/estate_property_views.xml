<?xml version="1.0"?>
<odoo>
    
    <record id="list_estate_property_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_available': True, 'search_default_current': True}</field>
    </record>

    <record id="estate_property_list_view" model="ir.ui.view">
        <field name="name">estate.property.list.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
           <list string="Properties"
            decoration-muted="state=='sold'"
            decoration-success="state in ('offer_accepted', 'offer_received')"
            decoration-bf="state=='offer_accepted'"
           >
                <field string="Title" name="name"/>
                <field string="State" name="state"/>
                <field string="Postcode" name="postcode"/>
                <field string="Bedrooms" name="bedrooms"/>
                <field string="Living Area(SQM)" name="living_area"/>
                <field string="Expected Price" name="expected_price" />
                <field string="Selling Price" name="selling_price" />
                <field string="Available From" name="date_availability" />
            </list>
        </field>
    </record>

    <record id="estate_property_create_view" model="ir.ui.view">
        <field name="name">estate.property.create.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="New Property">
                <header>
                    <button
                        name="action_cancel_sell"
                        type="object" string="Cancel"
                        invisible="state in ('sold', 'cancelled')"
                    />
                    <button
                        name="action_sold"
                        type="object" string="Sold"
                        invisible="state in ('sold', 'cancelled')"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="property_type_id" options="{'can_create': false, 'can_write':false}"/>
                            <field name="postcode" />
                            <field name="date_availability" />
                            <field name="state" />
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="last_seen"/>
                            <field name="best_price"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" widget="one2many_tag"
                                options="
                                {'create': 
                                [
                                    ['state', '!=', 'sold'], 
                                    ['state', '!=', 'cancelled'],
                                    ['state', '!=', 'offer_accepted']
                                ]
                                }"
                            />
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id"/>
                                <field name="bayer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" string="Name" />
                <separator/>
                <filter
                    string="Living Area"
                    name="living_area"
                    domain="[('living_area', '>=', self)]"
                />
                <filter
                    string="Available"
                    name="available"
                    domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"
                />
                <filter
                    string="Postcode"
                    name="postcode" 
                    context="{'group_by':'postcode' }"
                />
            </search>
        </field>
    </record>
</odoo>
